---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import Layout from "../../layouts/Layout.astro";

const allPosts = await getCollection('posts');

interface Props {
    post: CollectionEntry<"posts">
}

---

<Layout title="Blog">
    <section class="bg-stone-50 h-screen">
        <div class="container mx-auto pt-20">
            <div class="grid gap-2 p-10 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
                {allPosts.map((posts) => 
                    <a href={`posts/${posts.slug}`} class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{posts.data.title}</h5>
                    <p class="font-normal text-gray-700 dark:text-gray-400">Here are the biggest enterprise technology acquisitions of 2021 so far, in reverse chronological order.</p>
    </a>
                )}
                </div>
        </div>
        
    </section>
</Layout>
 


    

