---
import { CollectionEntry, getCollection } from "astro:content";

type Props = {
	posts: CollectionEntry<'posts'>[];
}


const postList = await(getCollection('posts'));
const { post } = Astro.props;
---

<div class="max-w-md mx-auto mt-10">
	{postList.map((p) => {
		<div class="bg-white rounded-lg overflow-hidden shadow-lg">
			<a href={`/posts/${p.data.title}`}>
			<img
		  		src={'/images/' + p.data.image}
		  		alt="Article Image"
		  		class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
			/>
		</div>
	})}
	<div class="bg-white rounded-lg overflow-hidden shadow-lg">
	  <a href={`/posts/${p.data.title}`}>
		<img
		  src={'/images/' + p.data.image}
		  alt="Article Image"
		  class="w-full h-48 object-cover hover:opacity-75 transition duration-300 ease-in-out"
		/>
	  </a>
	  <div class="p-6">
		<h2 class="text-2xl font-semibold mb-2">
		  <a href={`/posts/${p.slug}`}> {p.data.title} </a>
		</h2>
		
	  </div>
	</div>
  </div>
