---
import type { GetStaticPaths } from "astro";
import {getCollection, CollectionEntry} from 'astro:content';
import Client from './Client.astro';
type Props = {
  clients: CollectionEntry<'clients'>[];
};


const clientList = await(getCollection("clients"));
const { clients } = Astro.params;
---


  {clientList.map((c) => 
  <div class="w-full">
    <a href={`/clients/${c.slug}`} class="flex flex-col items-center">
    <img class="object-cover w-full rounded-t-lg h-96 md:h-auto md:w-48 md:rounded-none md:rounded-s-lg" 
      src={c.data.image} 
      alt={c.data.clientName}>
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
          {c.data.clientName}</h5>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
          {c.data.headline}</p>
    </div>
  </a>
</div>
  )}

